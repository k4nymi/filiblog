html, body {
  /* Allow scrolling */
  overflow-y: scroll;

  /* Hide scrollbar on WebKit browsers (Chrome, Edge, Safari) */
  scrollbar-width: none;      /* Firefox */
  -ms-overflow-style: none;   /* Internet Explorer / old Edge */
}

/* WebKit browsers */
html::-webkit-scrollbar,
body::-webkit-scrollbar {
  display: none;
}

body {
    margin: 0;
    font-family: 'heavy', sans-serif;
    cursor: none;
    background-image: linear-gradient(135deg, #FFEAD0 0%, #FFEAD0 100%);
    min-height: 200vh;
    background-attachment: fixed;
}

* {
  cursor: none !important;
}

.translucent-nav {
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    padding: 0;

    min-height: 80px;
    background-color: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);

    position: fixed;

    top: 15px;
    right: 15px;

    width: auto;
    max-width: none;

    left: auto;
    transform: none;
    margin-top: 0;


    border-radius: 10px;

    overflow: hidden;
    z-index: 1000;
}

.nav-button {
    text-decoration: none;
    color: #cd8f14;
    font-family: 'heavy', sans-serif;

    display: flex;
    align-items: center;
    justify-content: center;

    padding: 0 35px;
    margin: 0;
    border-radius: 0;
    font-size: 1.1em;

    transition: background-color 0.3s, color 0.3s, transform 0.3s;

    /* This keeps the button stable so expansion doesn’t shift layout */
    will-change: transform;
    transform-origin: center;
}

.nav-button:hover {
    background-color: #B55A4A;
    color: #E8D9C4;

    /* Slight scale-up for the expanding text effect */
    transform: scale(1.02);
}


---

.content-background {

    padding-top: 120px;
    text-align: center;
    color: #333;
    font-size: 1.2em;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
    padding-bottom: 50px;
}

.content-background h1 {
    margin-bottom: 20px;
    color: #2c3e50;
}

.content-background p:nth-of-type(odd) {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.top-text {
    position: fixed;
    top: 35px;         /* aligns vertically with the navbar */
    left: 30px;        /* positions at top-left */
    height: 40px;      /* same total height as navbar */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* evenly space the two lines */
    font-family: 'reg', sans-serif;
    color: #cd8f14;
    font-size: 1.3em;
    line-height: 0.6;
    z-index: 1000; /* stays above background but below navbar if needed */
    transition: color 1s;
}


.top-text:hover {
    color: #B55A4A;

    /* Slight scale-up for the expanding text effect */
}

.cursor {
  position: fixed;
  top: 0;
  left: 0;
  width: 30px;
  height: 30px;
  background: #cd8f148f;
  border: 1px solid #cd8f14;
  border-radius: 50%;
  pointer-events: none;
  transform: translate(-50%, -50%) scale(1);
  transition:
    transform 0.15s ease-out,
    background 0.25s ease,
    border 0.25s ease;
  z-index: 1001;
  box-shadow: none; /* ensure no shadow */
}
/* pulse on click */
.cursor.click,
.cursor.active {
  transform: translate(-50%, -50%) scale(2);
  background:#cd8f1417;
  border-color: #cd8f144b;
  box-shadow: none; /* ensure flat, no glow or shadow */
}

